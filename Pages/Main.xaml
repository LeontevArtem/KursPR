<Page x:Class="CarRent.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarRent.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Main">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/car2blur.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <Grid Height="40" VerticalAlignment="Top" Background="White" x:Name="top">
            <Label Content="Главная" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="20" FontWeight="Bold" Margin="0"/>
        </Grid>
        <Grid Margin="0,40,0,0" x:Name="parrent">
            <Frame x:Name="MainPageFrame"/>
        </Grid>
    </Grid>
</Page>
